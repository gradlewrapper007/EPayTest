<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationZoom">
        <item name="android:windowEnterAnimation">@anim/zoom_out_and_alpha</item>
        <item name="android:windowExitAnimation">@anim/zoom_in_and_alpha</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="GreyTextView" parent="TextView">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <!--Can be made bold italic underlined-->
    <style name="TextViewStylable" parent="TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!--Flat Button-->
    <style name="ButtonFlat" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- RoundImageView Custom Styling -->
    <declare-styleable name="RoundImageView">

        <!-- Whether or not to draw a circular border around the image. -->
        <attr name="rim_border" format="boolean" />
        <!-- The color of the border draw around the image. (if enabled) -->
        <attr name="rim_borderColor" format="color" />
        <!-- Makes the border this pixels wide. (if enabled) -->
        <attr name="rim_borderWidth" format="dimension" />
        <!-- Whether or not to draw a selector on this view upon touch events. -->
        <attr name="rim_selector" format="boolean" />
        <!-- The color of the selector draw on top of the image upon touch events. (if enabled) -->
        <attr name="rim_selectorColor" format="color" />
        <!-- The color of the selector stroke drawn around the image upon touch events. Be sure to provide some opacity. (if enabled) -->
        <attr name="rim_selectorStrokeColor" format="color" />
        <!-- The selector stroke drawn around the image upon touch events this pixels wide. (if enabled) -->
        <attr name="rim_selectorStrokeWidth" format="dimension" />
        <!-- Whether or not to draw a shadow around your circular image. -->
        <attr name="rim_shadow" format="boolean" />
        <!-- The radius for the shadow to extend to. (if enabled) -->
        <attr name="rim_shadowRadius" format="float" />
        <!-- Horizontal shadow offset. (if enabled) -->
        <attr name="rim_shadowDx" format="float" />
        <!-- Vertical shadow offset. (if enabled) -->
        <attr name="rim_shadowDy" format="float" />
        <!-- The color of the shadow drawn around your circular image. (if enabled) -->
        <attr name="rim_shadowColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundImageViewStyle">
        <attr name="rimDefault" format="reference" />
    </declare-styleable>
</resources>
